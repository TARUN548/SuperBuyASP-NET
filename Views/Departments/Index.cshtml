<h1>Departments</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var department in Model)
        {
            <tr>

                <td>@department["Id"]</td>
                <td>@department["Name"]</td>

            </tr>
        }
    </tbody>
</table>